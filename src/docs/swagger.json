  "components": {
    "schemas": {
      "Pessoa": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        },
        "required": ["nome", "email"]
      },
      "Usuario": {
        "type": "object",
        "properties": {
          "idPessoa": {
            "type": "integer"
          },
          "senha": {
            "type": "string"
          }
        },
        "required": ["idPessoa", "senha"]
      },
      "Livro": {
        "type": "object",
        "properties": {
          "titulo": {
            "type": "string"
          },
          "autor": {
            "type": "string"
          },
          "categoriaId": {
            "type": "integer"
          }
        },
        "required": ["titulo", "autor", "categoriaId"]
      },
      "Categoria": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string"
          }
        },
        "required": ["nome"]
      },
      "Emprestimo": {
        "type": "object",
        "properties": {
          "livroId": {
            "type": "integer"
          },
          "usuarioId": {
            "type": "integer"
          },
          "dataEmprestimo": {
            "type": "string",
            "format": "date"
          },
          "dataDevolucao": {
            "type": "string",
            "format": "date"
          }
        },
        "required": ["livroId", "usuarioId", "dataEmprestimo", "dataDevolucao"]
      }
    }
  }
